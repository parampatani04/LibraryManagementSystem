@page "/BorrowedBooks"

<style>
    h1 {
        text-align: center;
        color: white;
        font-size: 35px;
        font-family: Arial, Times, serif;
        margin-bottom: 40px;
    }

    body {
        background-color: black;
        color: white;
    }

    input {
        width: 72%;
        height: 36px;
        margin-right: 20px;
    }

    label {
        width: 110px;
        font-size: 20px;
        font-family: Arial Times, serif;
        border: 2px solid white;
    }

    .buttondiv {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        padding: 50px;
    }

    .button {
        background-color: #800080;
        color: white;
        width: 10%;
        height: 36px;
        border-radius: 5px;
        font-size: 14px;
        border: 2px solid black;
    }

    .flex1 {
        display: flex;
        flex-direction: row;
    }

</style>
<h1>Borrowed Books</h1>
<div class="flex_1">
    <label>Book Name</label>
    <input type="text" placeholder="Enter Book Name" />
    <button class="button search">Search</button>
</div>
<br />
<div class="flex_1">
    <label>Book ISBN</label>
    <input type="text" placeholder="Enter ISBN" />
    <button class="button search">Search</button>
</div>


@code {
    //borrowed books management page
    [Inject]
    NavigationManager NavigationManager { get; set; }
    private void CancelButton_OnClicked()
    {
        NavigationManager.NavigateTo("/rentalmanager");
    }

}