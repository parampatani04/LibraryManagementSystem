@page "/rentalmanager"


<style>
    h1 {
        text-align: center;
        color: white;
        font-size: 60px;
        font-family: 'Times New Roman', Times, serif;
        margin-bottom: 60px;
    }

    h2 {
        text-align: center;
        color: white;
        font-size: 30px;
        font-family: 'Times New Roman', Times, serif;
        margin-bottom: 20px;
    }

    body {
        background-color: black;
    }

    .buttondiv {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        padding: 50px;
    }

    .button {
        background-color: #800080;
        color: #F5EAEA;
        margin-bottom: 20px;
        width: 300px;
        height: 90px;
        border-radius: 40px;
        font-size: 20px;
        padding: 16px;
        border: 2px solid black;
    }

        .button:hover {
            opacity: 0.75;
        }

</style>


<h1>Library Management System</h1>
<h2> Manage Rentals</h2>
<div class="buttondiv">

    <div><button class="button add_eq" @onclick="IssueBook_OnClicked">Issue Book</button></div>
    <div><button class="button edit_eq" @onclick="RemoveBook_OnClicked">Return Book</button></div>
</div>

@code{
    // manages rentals
    [Inject]
    NavigationManager NavigationManager {get;set;}
    private void IssueBook_OnClicked(){
        NavigationManager.NavigateTo("/IssueBooks");
    }
    private void RemoveBook_OnClicked()
    {
        NavigationManager.NavigateTo("/ReturnBooks");
    }
   
}