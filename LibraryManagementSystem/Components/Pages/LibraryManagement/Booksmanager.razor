@page "/booksmanager"


<style>
    h1 {
        text-align: center;
        color: white;
        font-size: 60px;
        font-family: 'Times New Roman', Times, serif;
        margin-bottom: 60px;
    }
    h2 {
        text-align: center;
        color:white;
        font-size: 30px;
        font-family: 'Times New Roman', Times, serif;
        margin-bottom:20px;
    }

    body {
        background-color: black;
    }

    .buttondiv {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        padding: 50px;
    }

    .button {
        background-color: #800080;
        color: #F5EAEA;
        margin-bottom: 20px;
        width: 300px;
        height: 90px;
        border-radius: 40px;
        font-size: 20px;
        padding: 16px;
        border: 2px solid black;
    }

        .button:hover {
            opacity: 0.5;
        }

</style>


<h1>Library Management System</h1>
<h2> Manage Books</h2>
<div class="buttondiv">

    <div><button class="button add_eq" @onclick="AddBook_OnClicked">Add Books</button></div>
    <div><button class="button edit_eq" @onclick="UpdateBook_OnClicked"> Update Book Details</button></div>
    <div><button class="button remove_eq" @onclick="RemoveBook_OnClicked">Remove Book</button></div>

</div>

@code{
    <!-- Library Management System: Manage Books -->
    [Inject]
    NavigationManager NavigationManager { get; set; }
    private void AddBook_OnClicked(){
        NavigationManager.NavigateTo("/addBook");
    }
    private void UpdateBook_OnClicked(){
        NavigationManager.NavigateTo("/updateBook");
    }
    private void RemoveBook_OnClicked()
    {
        NavigationManager.NavigateTo("/removeBook");
    }
}