@page "/removemember"
@using LibraryManagementSystem.Components.Pages.Data;
<style>
    h1 {
        text-align: center;
        color: white;
        font-size: 35px;
        font-family: Arial, Times, serif;
        margin-bottom: 40px;
    }

    body {
        background-color: black;
        color: white;
    }

    input {
        width: 72%;
        height: 36px;
        margin-right: 20px;
    }

    label {
        width: 200px;
        font-size: 20px;
        font-family: Arial Times, serif;
    }

    .buttondiv {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        padding: 50px;
    }

    .button {
        background-color: #800080;
        color: white;
        width: 20%;
        height: 50px;
        border-radius: 5px;
        font-size: 14px;
        border: 2px solid BLACK;
    }

    .flex1 {
        display: flex;
        flex-direction: row;
    }

    #bottom_buttons {
        text-align: center;
    }

    .input_radio {
        width: 10%;
        height: 5%;
        margin: 0 0 0 0;
    }

    .input_textarea {
        width: 72%;
    }

    .button:hover {
        opacity: 0.75;
    }

    table {
        border-collapse: collapse;
        background-color: white;
        margin: auto;
        color: black;
    }

    td, th {
        border: 1px solid #000;
        padding: 8px;
    }
</style>
<h1>Delete Member</h1>
<table>
    <thead>
        <tr>
            <th>Member ID </th>
            <th>Member Name</th>
            <th>Gender</th>
            <th>Phone Number</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in memberslist)
        {
            <tr>
                <td>@item.GetMemberID()</td>
                <td>@item.GetMemberName()</td>
                <td>@item.GetGender()</td>
                <td>@item.GetPhone_num()</td>
                <td>@item.GetAddress()</td>

            </tr>
        }
    </tbody>
</table>
<br />
<div class="flex_1">
    <label>Member Id: </label>
    <input type="text" @bind="id" />
    </div>

<br />
<div id="bottom_buttons">
    <button class="button " @onclick="DeleteMembers">Delete</button>
    <button class="button " @onclick="CancelButton_OnClicked">Cancel</button>
 
</div>
@code {
    List<MemberDatabaseManager> memberslist = new List<MemberDatabaseManager>();
    MemberDatabaseManager members = new MemberDatabaseManager();
    private string id { get; set; }
    [Inject]
    NavigationManager NavigationManager { get; set; }
    protected override void OnInitialized()
    {
        memberslist.Clear();
        members.DisplayMembers(memberslist);
    }
    private void CancelButton_OnClicked()
    {
        NavigationManager.NavigateTo("/membersmanager");
    }
    private void DeleteMembers()
    {
        members.SetMemberID(Convert.ToInt32(id));
        members.RemoveMember();
        OnInitialized();
    }
}